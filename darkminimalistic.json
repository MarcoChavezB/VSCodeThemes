{
    "workbench.startupEditor": "newUntitledFile",
    "editor.fontSize": 15,
    "editor.guides.indentation": false,
    "editor.lineHeight": 3,
    "editor.lineNumbers": "off",
    "javascript.suggest.autoImports": true,
    "extensions.ignoreRecommendations": true,
    "typescript.tsserver.log": "off",
    // titlebar
    "window.titleBarStyle": "native",
    "editor.suggest.showIcons": false,
    "editor.suggest.showStatusBar": false,
    "files.associations": {
        ".env.*": "dotenv",
        ".prettierrc": "json",
        "*.css": "css"
    },
    "tailwindCSS.experimental.classRegex": [
        [
            "tv\\(([^)]*)\\)",
            "[\"'`]([^\"'`]*).*?[\"'`]"
        ]
    ],
    "editor.parameterHints.enabled": false,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "editor.suggestSelection": "first",
    "explorer.confirmDelete": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "[prisma]": {
        "editor.formatOnSave": true
    },
    "typescript.suggest.autoImports": true,
    "workbench.editor.labelFormat": "short",
    "editor.fontLigatures": true,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "emmet.syntaxProfiles": {
        "javascript": "jsx"
    },
    "editor.acceptSuggestionOnCommitCharacter": false,
    "explorer.compactFolders": false,
    "git.enableSmartCommit": true,
    "editor.accessibilitySupport": "off",
    "explorer.confirmDragAndDrop": false,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "editor.semanticHighlighting.enabled": false,
    "editor.fontFamily": "JetBrainsMono NF",
    "gitlens.codeLens.authors.enabled": false,
    "security.workspace.trust.untrustedFiles": "newWindow",
    "files.exclude": {
        "**\/CVS": true,
        "**\/.DS_Store": true,
        "**\/.hg": true,
        "**\/.svn": true,
        "**\/.git": true,
        ".vscode": true
    },
    "update.mode": "start",
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "window.commandCenter": false,
    "git.openRepositoryInParentFolders": "always",
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "console-ninja.featureSet": "Community",
    "workbench.editor.empty.hint": "hidden",
    "update.showReleaseNotes": false,
    "security.promptForLocalFileProtocolHandling": false,
    "editor.scrollbar.vertical": "hidden",
    "explorer.sortOrder": "foldersNestsFiles",
    "explorer.fileNesting.patterns": {
        "package.json": ".eslint*, prettier*, tsconfig*, vite*, pnpm-lock*, bun.lockb, nest*",
        "tailwind.config.js": "tailwind.config*, postcss.config*",
        ".env.local": ".env*",
        ".env": ".env*"
    },
    "explorer.fileNesting.enabled": true,
    // cursor configuration
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorStyle": "underline",
    "editor.cursorSurroundingLines": 3,
    "editor.cursorSurroundingLinesStyle": "all",
    "editor.cursorWidth": 2,
    "workbench.statusBar.visible": false,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "punctuation.definition.tag.end.html",
                    "meta.tag.block.any.html",
                    "meta.tag"
                ],
                "settings": {
                    "foreground": "#cc6f2c"
                }
            }
        ]
    },
    // terminal configuration 
    "terminal.integrated.gpuAcceleration": "off",
    "terminal.integrated.defaultProfile.osx": "fish",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",
    "terminal.integrated.env.osx": {
        "FIG_NEW_SESSION": "1"
    },
    "terminal.integrated.showExitAlert": false,
    "workbench.editor.showTabs": "single",
    "editor.hideCursorInOverviewRuler": true,
    "editor.minimap.enabled": false,
    "window.customTitleBarVisibility": "never",
    "workbench.tree.renderIndentGuides": "none",
    "workbench.layoutControl.enabled": false,
    "terminal.integrated.env.windows": {},
    "editor.autoIndent": "none",
    "editor.guides.highlightActiveIndentation": false,
    "editor.wrappingIndent": "none",
    "workbench.tree.indent": 4,
    "editor.detectIndentation": false,
    "workbench.editor.enablePreview": true,
    "editor.stickyScroll.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": false,
    "window.menuBarVisibility": "toggle",
    "terminal.integrated.env.linux": {},
    "workbench.activityBar.location": "hidden",
    "scm.inputFontSize": 15,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "errorLens.enabled": true,
    "splitHTMLAttributes.closingBracketOnNewLine": true,
    "workbench.iconTheme": "icons",
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "gitlens.plusFeatures.enabled": false,
    "github.copilot.editor.enableAutoCompletions": true,
    // vs code normal theme
    "workbench.colorCustomizations": {
        "editor.background": "#0F0F0F",
        "editorIndentGuide.activeBackground1": "#0F0F0F",
        //  "sideBar.background": "#0F0F0F",
        "editorGutter.background": "#0F0F0F",
        "editorSuggestWidget.background": "#0F0F0F",
        "editorSuggestWidget.border": "#0F0F0F",
        "sideBar.border": "#0F0F0F",
        "editor.selectionBackground": "#323232",
        "editor.lineHighlightBackground": "#0F0F0F",
    },
    

    "vscode_custom_css.imports": [
        "file:///home/marco/.config/Code/User/customvscode.css",
        "file:///home/marco/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.3/dist/updateHandler.js"
    ],
    "workbench.colorTheme": "vxcode-dark",
    
}
